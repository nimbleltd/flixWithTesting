<h1>Edit Movie Info: <%= @movie.title %></h1>

<%= form_for(@movie) do |f| %>
  <p>
    <%= f.label :title %><br>
    <%= f.text_field :title %><br><br>

    <%= f.label :description %><br>
    <%= f.text_area :description, cols:40, rows:7 %><br><br>

    <%= f.label :rating %><br>
    <%= f.text_field :rating %><br><br>

    <%= f.label :released_on %><br>
    <%= f.date_field :released_on %><br><br>

    <%= f.label :total_gross %><br>
    <%= f.number_field :total_gross %><br><br>

    <%= f.submit %><br><br>

  </p>
<% end %>

<p>
  <%= link_to "All Movies", root_path%>
</p>
<p>
  <%= link_to "Back to this movie", movie_path%>
</p>